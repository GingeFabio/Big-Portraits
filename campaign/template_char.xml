<root>
    <!-- Change height to compensate portrait changes -->
	<template name="sub_charsheet_overview" ruleset="5E">
		<subwindow>
			<anchored position="insidetopleft" offset="15,20" height="162">
				<right offset="-30" />
			</anchored>
			<activate />
			<fastinit />
			<class>charsheet_overview</class>
		</subwindow>
	</template>

	<template name="picture_charsheet">
		<genericcontrol>
			<anchored to="leftanchor" width="45" height="45">
				<top offset="55" />
				<left relation="relative" offset="5" postoffset="5" />
			</anchored>
			<script file="campaign/scripts/picture_charsheet.lua" />
			<portraitsize>148</portraitsize>
			<widgetsize>1</widgetsize>
		</genericcontrol>
	</template>
</root>
